<% @user ||= user %>
<div class="box" id="box-users-show">
  <span class="top">Profile</span>
  <span class="profile-avatar"><%= avatar_for(@user) %></span>
  <div style="margin-top:10px;">
    <span class="profile-title"><%=h @user %></span>&nbsp;
    <span class="profile-rank"><%=h rank_for(@user) %> &mdash; 
	<%= link_to number_with_delimiter(@user.posts_count) + ' forum posts', user_posts_path(@user) %></span>
  </div>
  
  <div class="profile-bio">
    <h2>Users description</h2>
<p><%=simple_format(sanitize(@user.bio))  %></p>
  </div>
  
  <% if !@user.signature.blank? %>
    <hr class="sig-hr" /><%= bb(@user.signature) %>
  <% end %>  
  
  <p style="margin-top:20px"> 
    <b>Last Visit</b>: <%= time_ago_or_time_stamp(@user.online_at) %> &nbsp;
  </p>

  <div class="clear"> </div>  
</div>
