<p>
	<%= link_to 'Upload a New Avatar', new_avatar_path, :class => "blue button" %>
</p>
<div class="avatar-list">
  <% for avatar in @avatars %>
    <div class="avatar">
      <%= image_tag(avatar.attachment.url) %>
      <br />by <%= link_to h(avatar.user), avatar.user %>
      <% if can_edit?(avatar) %>
        <%= link_to '(x)', avatar_path(avatar), :confirm => 'Are you sure?', :method => :delete %>
      <% end %>
      <% if !avatar.current_user_id.blank? %>
        <br />used by <%= link_to h(avatar.current_avatar_user), user_path(avatar.current_avatar_user.id) %>
      <% else %>
        <% if logged_in? %>
          <br /><%= link_to '(select)', select_avatar_path(avatar), :method => :post %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="clear"> <p><%= link_to 'Back', tandems_url, :class => "blue button" %></p></div>


