<h2>Editing question</h2><br>
<div class="form">
<% form_for @card, :url => { :action => "update" } do |f| %>

  <%= f.error_messages %>

  <p>
    <%= f.label :question %><br />
    <%= f.text_field :question %>
  </p>
  <p>
    <%= f.label :answer %><br />
    <%= f.text_field :answer %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
</div>

<%= link_to 'Back', glossary_path %> 