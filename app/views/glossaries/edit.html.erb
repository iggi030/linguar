<h2>Editing "<%= h @glossary.title %>"</h2>

<% form_for(@glossary) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title, :style => "width: 350px;" %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :style => "width: 350px; height: 200px;" %>
  </p>
   <p>
    <%= f.label "Should it appear in the Catalogue?" %>
    <%= f.check_box :public %>
  </p>
  <p>
    <%= f.label "Allow others to edit?" %>
    <%= f.check_box :shared %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Back', glossaries_path %>