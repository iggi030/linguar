<div class="tandem-post">
	
	<div class="tandem_header">
	<% link_to(post.user) do %>
		<h2><%= h post.user.login.capitalize! %> (29,  
		<% if post.location != nil %>
			<%= h post.location %>)</h2>
		<% end %>		
	<% end %>
	</div>
	<div class="left-col">	
		<%= avatar_for(post.user) %>
		<p>Looking for a <br /><b><%= h find_name_for_language(post.learning_language) %> <%= h post.post_type_to_string(post.post_type-1) %></b></p> <br />
		<p>Offering: <%= h find_name_for_language(post.offering_language) %></p>
	</div>
	<div class="right-col">
		<h2>Motivation</h2>
		<p><%=  simple_format(sanitize(post.motivation))  %></p>
		<h2>Description</h2>
		<p><%=  simple_format(sanitize(post.user.bio))  %></p>
		
		
</div>
