<% if @tandem.user == current_user %>
<%= link_to 'Remove post', @tandem, 
					        :class => "list-actions", :confirm => 'Are you sure?', 
					        :method => :delete %>
<%end%>
<div class="tandem-post">
	
	<div class="tandem_header">	
	<h2><%= h @tandem.user.login.capitalize %> </h2>
	<% if @tandem.location != nil %>
		<%= h @tandem.location %>
	<% end %>
  
	</div>
	<div class="left-col">	
		<%= avatar_for(@tandem.user) %>
		<p>Looking for a <br /><b>
        <%= h find_name_for_language(@tandem.learning_language) %>
        <%= h @tandem.post_type_to_string(@tandem.post_type-1) %></b></p> <br />
		<p>Offering: <%= h find_name_for_language(@tandem.offering_language) %></p>
        <br />
        <%= link_to 'Contact User', contact_user_path(@tandem.user) , :class => "large blue button" %> 
        
    </div>
	<div class="right-col">
		<h2>Motivation</h2>
		<p><%=  simple_format(sanitize(@tandem.motivation))  %></p>
		<h2>Description</h2>
		<p><%=  simple_format(sanitize(@tandem.user.bio))  %></p>		
	</div>
</div>

<div style="clear: both;"></div>
<p>
<%= link_to 'More language partners', tandems_path %>
</p>


