<% if @tandem.user == current_user %>
<%= link_to 'Remove post', @tandem, 
					        :class => "list-actions", :confirm => 'Are you sure?', 
					        :method => :delete %>
<%end%>

<div class="tandem_post">
	<div class="post_header">
	<% link_to(@tandem, :rel => 'nofollow', :target => '_blank'  )do %>
		<h2><%= h @tandem.user.login.capitalize %></h2>
		
	<% end %>
	<iframe src="http://www.facebook.com/plugins/like.php?href=<%=CGI::escape(request.protocol + request.host_with_port + request.request_uri) %>&amp;layout=standard&amp;
	show_faces=true&amp;width=450&amp;action=recommend&amp;colorscheme=light&amp;height=30" scrolling="no" frameborder="0" style="border:none; overflow:hidden; width:450px; height:40px;" allowTransparency="true"></iframe>

	</div>
	
	<div style="float: left; width:20%;">
		<%= avatar_for(@tandem.user) %>
		<% if @tandem.location != nil %>
			<p>Living in: <%= h @tandem.location %></p>
		<% end %>
		
	</div>
	
	<div style="float: left; margin-left:50px;">
		<table class="tandem_table">
			<tr>
				<td class="left_col">Looking for: </td>
				<td>
					<b><%= h @tandem.post_type_to_string(@tandem.post_type-1).capitalize %></b>
				</td>
			</tr>
			<tr>
				<td class="left_col">Offering language:</td>
				<td><%= h find_name_for_language(@tandem.offering_language) %></td>
			</tr>
			<tr>
				<td class="left_col">Wants to learn:</td>
				<td><%= h find_name_for_language(@tandem.learning_language) %></td>
			</tr>
			<tr>
				<td class="left_col">Short description:</td>
				<td><%=  simple_format(sanitize(@tandem.motivation))  %></td>	
			</tr>
			<tr>
				<td class="left_col">About me:</td>
				<td><%=  simple_format(sanitize(@tandem.user.bio))  %></td>	
			</tr>
		</table>
	</div>
</div>

<div style="clear: both;"></div>
<div style="text-align: right;">
					
<%= link_to 'Contact User', contact_user_path(@tandem.user) , :class => "large blue button" %>
</div>
<p>
<% link_to 'More language partners', tandems_path %>
</p>


